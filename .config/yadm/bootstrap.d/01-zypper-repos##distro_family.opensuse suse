#!/usr/bin/bash

set -euo pipefail

TMPDIR="$(mktemp -d)"

pushd "$TMPDIR"

sudo zypper -n --no-cd refresh -f

echo "Librewolf"

sudo zypper -n --no-cd addrepo -cfp 98 -n Librewolf 'https://download.opensuse.org/repositories/home:/zzndb001/openSUSE_Tumbleweed/home:zzndb001.repo' && \
    sudo zypper -n --no-cd --gpg-auto-import-keys refresh -r Librewolf && \
    sudo zypper -n --no-cd dist-upgrade --from Librewolf -y --allow-vendor-change  && \
    sudo zypper -n --no-cd install -y --allow-vendor-change -r Librewolf LibreWolf

echo "Codecs"

sudo zypper -n --no-cd addrepo -cfp 90 'https://ftp.gwdg.de/pub/linux/misc/packman/suse/openSUSE_Tumbleweed/' packman && \
    sudo zypper -n --no-cd --gpg-auto-import-keys refresh -r packman && \
    sudo zypper -n --no-cd dist-upgrade --from packman -y --allow-vendor-change --auto-agree-with-licenses && \
    sudo zypper -n --no-cd install --from packman -y --auto-agree-with-licenses ffmpeg gstreamer-plugins-{good,bad,ugly,libav} libavcodec-full vlc-codecs

echo "Microsoft" ; echo "Edge"

curl -LOs https://packages.microsoft.com/keys/microsoft.asc
sudo rpm --import "$(awk -F / '{print $NF}' <(echo 'https://packages.microsoft.com/keys/microsoft.asc'))"

sudo zypper -n --no-cd addrepo -cf 'https://packages.microsoft.com/yumrepos/edge/' ms-edge && \
    sudo zypper -n --no-cd --gpg-auto-import-keys refresh -r ms-edge && \
    sudo zypper -n --no-cd install -y --auto-agree-with-licenses -r ms-edge microsoft-edge-stable

echo "Dotnet"

sudo zypper -n --no-cd addrepo -cf https://packages.microsoft.com/opensuse/15/prod/ dotnet &&
    sudo zypper -n --no-cd --gpg-auto-import-keys refresh -r dotnet && \
    sudo zypper -n --no-cd install -y --auto-agree-with-licenses -r dotnet \*7.0

echo "Snap"

sudo zypper -n --no-cd addrepo -cf 'https://download.opensuse.org/repositories/system:/snappy/openSUSE_Tumbleweed' snappy && \
    sudo zypper -n --no-cd --gpg-auto-import-keys refresh -r snappy && \
    sudo zypper -n --no-cd dist-upgrade --from snappy -y && \
    sudo zypper -n --no-cd install -r snappy snapd -y && \
    sudo systemctl enable --now snapd
    sudo systemctl enable --now snapd.apparmor
